{% extends "layouts/base.twig" %}

{% block title %}Editar Logro - Gabit{% endblock %}

{% block body_class %}page-logros{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Editar Logro</h1>
            <a href="/crudGabit/achievements" class="btn btn-outline-secondary">
                ‚Üê Volver a Logros
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <form method="POST" action="/crudGabit/achievements/update">
                            <input type="hidden" name="idLogro" value="{{ logro.idLogro }}">
                            <input type="hidden" name="idCamino" value="{{ logro.idCamino }}">
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre del Logro *</label>
                                <input type="text" class="form-control" id="nombre" name="nombre"
                                       value="{{ logro.nombre }}" required>
                            </div>
                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripci√≥n *</label>
                                <textarea class="form-control" id="descripcion" name="descripcion"
                                          rows="4" required>{{ logro.descripcion }}</textarea>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">H√°bito asociado</label>
                                <div class="alert alert-info mb-0">
                                    <strong>üèÜ {{ logro.nombreHabito }}</strong>
                                    <p class="mb-0 mt-2 small text-muted">
                                        El h√°bito asociado no puede modificarse una vez creado el logro
                                    </p>
                                </div>
                            </div>
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="/crudGabit/achievements" class="btn btn-outline-secondary">
                                    Cancelar
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    Actualizar Logro
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                {% if success %}
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        <strong>¬°√âxito!</strong> {{ success }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}