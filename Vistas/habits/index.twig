{% extends "layouts/base.twig" %}

{% block title %}Gestión de Hábitos - Gabit{% endblock %}

{% block body_class %}page-habits{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Mis Hábitos</h1>
            <a href="/dashboard" class="btn btn-outline-secondary">← Volver al Dashboard</a>
        </div>

        {# BUSCADOR #}
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="GET" action="/habits" class="d-flex">
                    <input type="text"
                           name="search"
                           class="form-control me-2"
                           placeholder="Buscar hábitos..."
                           value="{{ search ?? '' }}">
                    <button type="submit" class="btn btn-primary">Buscar
                    </button>
                    {% if search %}
                        <a href="/habits" class="btn btn-outline-secondary ms-2">
                            ✖ Limpiar
                        </a>
                    {% endif %}
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a href="/habits/create" class="btn btn-success">+ Nuevo Hábito</a>
            </div>
        </div>

        <div class="card p-3 shadow-sm">
            <h4 class="mb-3">
                Hábitos Registrados
                {% if search %}
                    <small class="text-muted">({{ habits|length }} resultados para "{{ search }}")</small>
                {% endif %}
            </h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Categoría</th>
                    <th>Fecha de Creación</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% if habits is empty %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            {% if search %}
                                No se encontraron hábitos que coincidan con "{{ search }}"
                            {% else %}
                                No tienes hábitos registrados
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    {% for habit in habits %}
                        <tr>
                            <td>{{ habit.nombre }}</td>
                            <td>{{ habit.descripcion }}</td>
                            <td>
                                <span class="badge bg-info">{{ habit.categoria }}</span>
                            </td>
                            <td>{{ habit.fechaCreacion }}</td>
                            <td>
                                <form method="POST" action="/habits/edit" style="display:inline">
                                    <input type="hidden" name="idCamino" value="{{ habit.idCamino }}">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        Editar
                                    </button>
                                </form>
                                <form method="POST" action="/habits/delete" style="display:inline">
                                    <input type="hidden" name="idCamino" value="{{ habit.idCamino }}">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

        {% if success %}
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <strong>¡Éxito!</strong> {{ success }}
            </div>
        {% endif %}

        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <strong>Error:</strong> {{ error }}
            </div>
        {% endif %}
    </div>
{% endblock %}