{% extends "layouts/base.twig" %}

{% block title %}Editar Hábito - Gabit{% endblock %}

{% block body_class %}page-habitos{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Editar Hábito</h1>
            <a href="/crudGabit/habits" class="btn btn-outline-secondary">← Volver a Hábitos</a>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <form method="POST" action="/crudGabit/habits/update">
                        <input type="hidden" name="idCamino" value="{{ habit.idCamino }}">

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombreHabito"
                                   value="{{ habit.nombre }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea class="form-control" name="descripcion" rows="4"
                                      required>{{ habit.descripcion }}</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoría</label>
                            <select name="categoria" class="form-control">
                                {% for cat in categorias %}
                                    <option value="{{ cat }}" {% if cat == habit.categoria %}selected{% endif %}>
                                        {{ cat }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning flex-fill">
                                Actualizar Hábito
                            </button>
                            <a href="/crudGabit/habits" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
                {% if success %}
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        <strong>¡Éxito!</strong> {{ success }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}