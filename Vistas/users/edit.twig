{% extends "layouts/base.twig" %}

{% block title %}Editar Usuario - Gabit{% endblock %}

{% block body_class %}page-usuarios{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Editar Usuario</h1>
            <a href="/crudGabit/users" class="btn btn-outline-secondary">← Volver a Usuarios</a>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <form method="POST" action="/crudGabit/users/update">
                        <input type="hidden" name="idUsuario" value="{{ usuario.id }}">

                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input type="text" class="form-control" name="nombreUsuario"
                                   value="{{ usuario.nombreUsuario }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombre"
                                   value="{{ usuario.nombre }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Apellidos</label>
                            <input type="text" class="form-control" name="apellidos"
                                   value="{{ usuario.apellidos }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" name="email"
                                   value="{{ usuario.email }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rol</label>
                            <select class="form-select" name="rol">
                                <option value="admin" {% if usuario.rol == "admin" %}selected{% endif %}>Admin</option>
                                <option value="usuario" {% if usuario.rol == "usuario" %}selected{% endif %}>Usuario</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning flex-fill">
                                Actualizar Usuario
                            </button>
                            <a href="/crudGabit/users" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
                {% if success %}
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        <strong>¡Éxito!</strong> {{ success }}
                    </div>
                {% endif %}

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        <strong>Error:</strong> {{ error }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}