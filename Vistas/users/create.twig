{% extends "layouts/base.twig" %}

{% block title %}Crear Usuario - Gabit{% endblock %}

{% block body_class %}page-usuarios{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Crear Nuevo Usuario</h1>
            <a href="/crudGabit/users" class="btn btn-outline-secondary">← Volver a Usuarios</a>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <form method="POST" action="/crudGabit/users/create">
                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input type="text" class="form-control" name="nombreUsuario"
                                   placeholder="nombre_usuario" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombre"
                                   placeholder="Juan" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Apellidos</label>
                            <input type="text" class="form-control" name="apellidos"
                                   placeholder="García López" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" name="email"
                                   placeholder="usuario@mail.com" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" class="form-control" name="password"
                                   placeholder="Contraseña" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rol</label>
                            <select class="form-select" name="rol">
                                <option value="usuario" selected>Usuario</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                Crear Usuario
                            </button>
                            <a href="/crudGabit/users" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
                {% if success %}
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        <strong>¡Éxito!</strong> {{ success }}
                    </div>
                {% endif %}
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        <strong>Error:</strong> {{ error }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}