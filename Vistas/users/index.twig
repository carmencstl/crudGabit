{% extends "layouts/base.twig" %}

{% block title %}Gesti√≥n de Usuarios - Gabit{% endblock %}

{% block body_class %}page-usuarios{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gesti√≥n de Usuarios</h1>
            <a href="/crudGabit/dashboard" class="btn btn-outline-secondary">‚Üê Volver al Dashboard</a>
        </div>

        {# BUSCADOR #}
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="GET" action="/crudGabit/users" class="d-flex">
                    <input type="text"
                           name="search"
                           class="form-control me-2"
                           placeholder="Buscar por nombre, email o username..."
                           value="{{ search ?? " " }}">
                    <button type="submit" class="btn btn-primary">
                        üîç Buscar
                    </button>
                    {% if search %}
                        <a href="/crudGabit/users" class="btn btn-outline-secondary ms-2">
                            ‚úñ Limpiar
                        </a>
                    {% endif %}
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a href="/crudGabit/users/create" class="btn btn-success">+ Nuevo Usuario</a>
            </div>
        </div>

        <div class="card p-3 shadow-sm">
            <h4 class="mb-3">
                Usuarios Registrados
                {% if search %}
                    <small class="text-muted">({{ usuarios|length }} resultados para "{{ search }}")</small>
                {% endif %}
            </h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Correo Electr√≥nico</th>
                    <th>Rol</th>
                    <th>Fecha de creaci√≥n</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% if usuarios is empty %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            {% if search %}
                                No se encontraron usuarios que coincidan con "{{ search }}"
                            {% else %}
                                No se encontraron usuarios
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    {% for usuario in usuarios %}
                        <tr>
                            <td>{{ usuario.nombreUsuario }}</td>
                            <td>{{ usuario.nombre }}</td>
                            <td>{{ usuario.apellidos }}</td>
                            <td>{{ usuario.email }}</td>
                            <td>
                                {% if usuario.rol == "admin" %}
                                    <span class="badge bg-danger">Admin</span>
                                {% else %}
                                    <span class="badge bg-secondary">Usuario</span>
                                {% endif %}
                            </td>
                            <td>{{ usuario.fechaCreacion }}</td>
                            <td>
                                <form method="POST" action="/crudGabit/users/edit" style="display:inline">
                                    <input type="hidden" name="idUsuario" value="{{ usuario.idUsuario }}">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        Editar
                                    </button>
                                </form>
                                <form method="POST" action="/crudGabit/users/delete" style="display:inline"
                                      onsubmit="return confirm('¬øEst√°s seguro de eliminar este usuario?')">
                                    <input type="hidden" name="idUsuario" value="{{ usuario.idUsuario }}">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
        {% if success %}
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <strong>¬°√âxito!</strong> {{ success }}
            </div>
        {% endif %}
    </div>
{% endblock %}