{% extends "layouts/base.twig" %}

{% block title %}Dashboard - Gabit{% endblock %}

{% block content %}
    <div class="container my-5">
        <h1 class="mb-4">Dashboard</h1>
        <div class="row g-4">
            {% if isAdmin %}
                <div class="col-md-4">
                    <a href="users" class="stat-card usuarios">
                        <h3>{{ stats.totalUsuarios }}</h3>
                        <p>Usuarios Registrados</p>
                    </a>
                </div>
            {% endif %}
            <div class="col-md-4">
                <a href="habits" class="stat-card habitos">
                    <h3>{{ stats.totalHabitos }}</h3>
                    <p>Hábitos Creados</p>
                </a>
            </div>
            <div class="col-md-4">
                <a href="achievements" class="stat-card logros">
                    <h3>{{ stats.totalLogros }}</h3>
                    <p>Logros Creados</p>
                </a>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>{% if isAdmin %}Panel de Administración{% else %}Mis Hábitos y Logros{% endif %}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            {% if isAdmin %}
                                <div class="col-md-4">
                                    <a href="users" class="menu-card usuarios-menu">
                                        <h4>Gestionar Usuarios</h4>
                                        <p>Ver, crear y editar usuarios</p>
                                    </a>
                                </div>
                            {% endif %}
                            <div class="col-md-{% if isAdmin %}4{% else %}6{% endif %}">
                                <a href="habits" class="menu-card habitos-menu">
                                    <h4>Mis Hábitos</h4>
                                    <p>{% if isAdmin %}Administrar hábitos del sistema{% else %}Crea y sigue tus hábitos{% endif %}</p>
                                </a>
                            </div>
                            <div class="col-md-{% if isAdmin %}4{% else %}6{% endif %}">
                                <a href="achievements" class="menu-card logros-menu">
                                    <h4>Mis Logros</h4>
                                    <p>{% if isAdmin %}Configurar logros y recompensas{% else %}Desbloquea nuevos logros{% endif %}</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}